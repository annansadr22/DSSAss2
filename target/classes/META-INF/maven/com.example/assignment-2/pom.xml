<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.example</groupId>
  <artifactId>assignment-2</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>assignment-2</name>
  <description>Assignment 2 description</description>
  <url>http://your-project-url.com</url>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.xolstice.maven.plugins</groupId>
        <artifactId>protobuf-maven-plugin</artifactId>
        <version>0.6.1</version>
        <configuration>
		  <protocArtifact>com.google.protobuf:protoc:3.18.1:${os.detected.classifier}</protocArtifact>
		  <pluginId>grpc-java</pluginId>
		  <pluginArtifact>io.grpc:protoc-gen-grpc-java:1.42.1:${os.detected.classifier}</pluginArtifact>
		  <outputDirectory>${project.basedir}/src/main/generated</outputDirectory>
		  <clearOutputDirectory>true</clearOutputDirectory>
		</configuration>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
              <goal>test-compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- Dependencies -->
    
    <!-- SLF4J API -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.6</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
    <!-- MongoDB Java Driver Sync -->
    <dependency>
      <groupId>org.mongodb</groupId>
      <artifactId>mongodb-driver-sync</artifactId>
      <version>4.4.2</version>
    </dependency>
    <!-- MongoDB BSON -->
    <dependency>
      <groupId>org.mongodb</groupId>
      <artifactId>bson</artifactId>
      <version>4.4.2</version>
      <scope>compile</scope>
    </dependency>
    <!-- MongoDB Driver Core -->
    <dependency>
      <groupId>org.mongodb</groupId>
      <artifactId>mongodb-driver-core</artifactId>
      <version>4.4.2</version>
      <scope>compile</scope>
    </dependency>
    <!-- JUnit -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.1</version> <!-- Or the latest version -->
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
